{
  "title": "API SLOs",
  "timezone": "browser",
  "panels": [
    {
      "type": "timeseries",
      "title": "Latency p50/p95/p99",
      "targets": [
        {"expr": "histogram_quantile(0.5, sum(rate(api_request_latency_seconds_bucket[5m])) by (le))"},
        {"expr": "histogram_quantile(0.95, sum(rate(api_request_latency_seconds_bucket[5m])) by (le))"},
        {"expr": "histogram_quantile(0.99, sum(rate(api_request_latency_seconds_bucket[5m])) by (le))"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Error rates (4xx/5xx)",
      "targets": [
        {"expr": "sum(rate(errors_total{code=~\"4..\"}[5m]))"},
        {"expr": "sum(rate(errors_total{code=~\"5..\"}[5m]))"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Rate limit hits",
      "targets": [
        {"expr": "sum(rate(rate_limit_hits_total[5m])) by (route)"}
      ]
    }
  ],
  "schemaVersion": 37,
  "version": 1
}

