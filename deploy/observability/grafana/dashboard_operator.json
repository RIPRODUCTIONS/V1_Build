{
  "title": "Operator Metrics",
  "panels": [
    {
      "type": "graph",
      "title": "Tasks Started",
      "targets": [{"expr": "sum(rate(web_automation_tasks_started[5m]))"}]
    },
    {
      "type": "graph",
      "title": "Tasks Completed by Status",
      "targets": [{"expr": "sum(rate(web_automation_tasks_completed[5m])) by (status)"}]
    },
    {
      "type": "graph",
      "title": "Actions",
      "targets": [{"expr": "sum(rate(web_automation_actions_total[5m])) by (action)"}]
    },
    {
      "type": "graph",
      "title": "Action Errors",
      "targets": [{"expr": "sum(rate(web_automation_action_errors_total[5m])) by (action)"}]
    },
    {
      "type": "graph",
      "title": "Task Duration p95",
      "targets": [{"expr": "histogram_quantile(0.95, sum(rate(web_automation_task_duration_seconds_bucket[5m])) by (le))"}]
    }
  ]
}


