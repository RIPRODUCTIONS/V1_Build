{
  "title": "Life Routes Metrics",
  "panels": [
    {
      "type": "graph",
      "title": "Requests by route/status",
      "targets": [
        {
          "expr": "sum by (route,status) (rate(life_requests_total[5m]))"
        }
      ]
    },
    {
      "type": "heatmap",
      "title": "Latency buckets (route)",
      "targets": [
        {
          "expr": "sum by (le,route) (rate(life_request_latency_seconds_bucket[5m]))"
        }
      ]
    }
  ],
  "time": { "from": "now-6h", "to": "now" }
}
