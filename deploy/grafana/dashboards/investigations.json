{
  "title": "Investigations & Autonomy",
  "panels": [
    {
      "type": "graph",
      "title": "Tasks Started/Completed",
      "targets": [
        { "expr": "sum(rate(web_automation_tasks_started[5m]))" },
        { "expr": "sum(rate(web_automation_tasks_completed[5m]))" }
      ]
    },
    {
      "type": "graph",
      "title": "Task Duration p50/p95",
      "targets": [
        { "expr": "histogram_quantile(0.5, sum(rate(web_automation_task_duration_seconds_bucket[5m])) by (le))" },
        { "expr": "histogram_quantile(0.95, sum(rate(web_automation_task_duration_seconds_bucket[5m])) by (le))" }
      ]
    },
    {
      "type": "graph",
      "title": "Action Errors",
      "targets": [ { "expr": "sum(rate(web_automation_action_errors_total[5m]))" } ]
    },
    {
      "type": "stat",
      "title": "Autonomy Ticks (10m)",
      "targets": [ { "expr": "sum(increase(celery_tasks_total{task_name=\"system.autonomy.tick\"}[10m]))" } ]
    }
  ]
}



