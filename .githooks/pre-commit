#!/usr/bin/env bash
set -Eeuo pipefail
[[ "${CI:-}" == "true" ]] && exit 0
[[ "${SKIP_HOOKS:-}" == "1" ]] && exit 0
ROOT="$(git rev-parse --show-toplevel 2>/dev/null || true)"
cd "${ROOT}" || exit 1
echo "› pre-commit: running smoke test…"
pushd backend >/dev/null
if [[ -x .venv/bin/python ]]; then
  source .venv/bin/activate
fi
python scripts/smoke_check.py || {
  echo "✖ pre-commit: smoke test failed — fix before committing."
  exit 1
}
popd >/dev/null
echo "✔ pre-commit: smoke test passed."
