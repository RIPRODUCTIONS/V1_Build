# Configuration Template for n8n Workflows
# Copy this file to .env.local and update with your actual values

# API Keys
OPENWEATHER_API_KEY=your_openweather_api_key_here
GITHUB_ACCESS_TOKEN=your_github_token_here
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# GitHub Repository Settings
GITHUB_OWNER=your_github_username
GITHUB_REPO=your_repository_name

# Email Settings
ADMIN_EMAIL=admin@yourcompany.com
FINANCE_EMAIL=finance@yourcompany.com
OPERATIONS_EMAIL=operations@yourcompany.com
ALERTS_EMAIL=alerts@yourcompany.com
WEATHER_EMAIL=weather@yourcompany.com
ARCHIVE_EMAIL=archive@yourcompany.com
MANAGEMENT_EMAIL=management@yourcompany.com

# Weather Settings
WEATHER_LOCATION=New York
HIGH_TEMP_THRESHOLD=30
LOW_TEMP_THRESHOLD=0

# Transaction Processing Settings
HIGH_VALUE_THRESHOLD=1000

# File Monitoring Paths
INPUT_DATA_PATH=/home/node/.n8n/data/input
OUTPUT_DATA_PATH=/home/node/.n8n/data/output
PROCESSED_DATA_PATH=/home/node/.n8n/data/processed

# Database Settings (if using external databases)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Slack Channels
SLACK_GENERAL_CHANNEL=#general
SLACK_DEV_CHANNEL=#dev-team
SLACK_REVIEWS_CHANNEL=#code-reviews

# Notification Thresholds
GITHUB_ISSUES_THRESHOLD=5
CUSTOMER_COUNT_THRESHOLD=100