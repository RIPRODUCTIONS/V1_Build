# n8n Environment Configuration Template
# Copy this file to .env and update with your actual values

# Basic Authentication (REQUIRED)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# n8n Configuration
N8N_HOST=localhost
N8N_PORT=5678

# Security Settings
N8N_SECURE_COOKIE=true
N8N_PROTOCOL=https

# Database (Optional - for production use)
# DB_TYPE=postgresdb
# DB_POSTGRESDB_HOST=localhost
# DB_POSTGRESDB_PORT=5432
# DB_POSTGRESDB_DATABASE=n8n
# DB_POSTGRESDB_USER=n8n_user
# DB_POSTGRESDB_PASSWORD=STRONG_DB_PASSWORD

# External API Keys (Add your keys here)
# OPENWEATHER_API_KEY=your_openweather_api_key
# GITHUB_TOKEN=your_github_token
# SLACK_WEBHOOK_URL=your_slack_webhook_url

# Email Configuration
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASSWORD=your_app_password

# Logging
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console

# Execution settings
EXECUTIONS_DATA_PRUNE=true
EXECUTIONS_DATA_MAX_AGE=336